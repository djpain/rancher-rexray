FROM centos:latest
RUN curl -sSL https://rexray.io/install | sh
COPY rexray.yml /etc/rexray/rexray.yml 
COPY run-sdc.sh /run-sdc.sh
ENV DOCKER_LEGACY=true REXRAY_FSTYPE=EXT4 REXRAY_LOGLEVEL=warn REXRAY_PREEMPT=false HTTP_PROXY= LIBSTORAGE_INTEGRATION_VOLUME_OPERATIONS_MOUNT_ROOTPATH= LINUX_VOLUME_ROOTPATH= LINUX_VOLUME_FILEMODE= EBS_ACCESSKEY= EBS_ENDPOINT= EBS_KMSKEYID= EBS_MAXRETRIES= EBS_REGION=ap-southeast-2 EBS_SECRETKEY= EBS_STATUSINITIALDELAY= BS_STATUSMAXATTEMPTS= EBS_STATUSTIMEOUT= EBS_USELARGEDEVICERANGE= CSI_ENDPOINT= X_CSI_DRIVER= X_CSI_NATIVE=
CMD ["/run-sdc.sh","rexray","start","-f","--nopid"]
